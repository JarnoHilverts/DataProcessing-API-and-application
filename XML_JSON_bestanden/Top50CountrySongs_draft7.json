{
    "$id": "https://example.com/arrays.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation countries",
    "type": "object",
    "properties": 
    {
        "countries":
        {
            "type": "object",
            "properties": 
            {
                "country": 
                {
                    "type": "array",
                    "items":
                    {
                        "type":"object",
                        "properties":
                        {
                            "name": {"type": "string" },
                            "data": 
                            {
                                "type": "array",
                                "items":
                                {
                                    "type":"object",
                                    "properties": 
                                    {
                                        "title": {"type": "string" },
                                        "artist": {"type": "string" },
                                        "genre": {"type": "string" },
                                        "number": {"type": "number", "minimum": 1  }
                                    }
                                }
                            }
                        }
                    } 
                }
            }   
        }
    }
}
    
    